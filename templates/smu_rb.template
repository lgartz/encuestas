<div class="form-group">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h4><%= ask %></h4>
		</div>
		<div class="panel-body"><% listOptions.each{ |option| %>	
			<div class="radio">
				<label class="form-control">
					<input id="<%=type%><%=option["value"]%><%=number%>" name="<%=type%><%=number%>" type="radio" value="<%=option["value"]%>">
					<%=option["value"]%>
				</label>
			</div><% } %>
		</div>
	</div>
</div>